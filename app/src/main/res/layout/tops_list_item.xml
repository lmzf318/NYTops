<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground">

    <LinearLayout
            android:id="@+id/tops_floor1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

        <TextView
                style="@style/ListItemNormalText"
                android:id="@+id/tops_list_section"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"/>

        <TextView
                style="@style/ListItemMainText"
                android:id="@+id/tops_list_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="left|center_vertical"
                android:ellipsize="marquee"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/tops_floor2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_below="@id/tops_floor1">

        <ImageView
                android:id="@+id/tops_list_thumbnail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <TextView
                style="@style/ListItemNormalText"
                android:id="@+id/tops_list_abs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="left"
                android:inputType="textMultiLine"/>
    </LinearLayout>

</RelativeLayout>
