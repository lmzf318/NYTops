<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:descendantFocusability="blocksDescendants"
              android:background="?android:attr/selectableItemBackground">

    <LinearLayout
            android:id="@+id/tops_floor1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                style="@style/ListItemNormalText"
                android:id="@+id/tops_list_section"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"/>

        <ImageView
                android:id="@+id/tops_list_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/tops_floor2"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                style="@style/ListItemMainText"
                android:id="@+id/tops_list_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:ellipsize="marquee"/>

        <TextView
                style="@style/ListItemNormalText"
                android:id="@+id/tops_list_abs"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:clickable="true"
                android:soundEffectsEnabled="false"/>
    </LinearLayout>

</LinearLayout>
